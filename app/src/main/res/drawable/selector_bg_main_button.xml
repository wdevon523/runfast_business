<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/s2"/>
            <solid android:color="@color/crusta_dark"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/s2"/>
            <solid android:color="@color/aluminum"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/s2"/>
            <solid android:color="@color/crusta"/>
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s49"
        tools:layout_marginLeft="@dimen/m10"
        tools:layout_marginRight="@dimen/m10"
        android:background="@drawable/shape_bg_header_day_order"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:showIn="@layout/activity_day_order">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="商品"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/t12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:text="销售金额"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/t12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:text="销售单量"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/t12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:text="客单价"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/t12"/>
    </LinearLayout>
</layout>